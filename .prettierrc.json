{
  "bracketSpacing": true,
  "printWidth": 80,
  "proseWrap": "always",
  "singleQuote": true,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse",
        "compiler": "0.8.21",
        "tabWidth": 4,
        "singleQuote": false,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.{js,ts}",
      "options": {
        "tabWidth": 2,
        "semi": false,
        "arrowParens": "avoid"
      }
    },
    {
      "files": "*.yaml",
      "options": {
        "printWidth": 120,
        "proseWrap": "never",
        "bracketSpacing": false
      }
    }
  ]
}
